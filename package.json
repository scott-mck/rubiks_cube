{
  "name": "rubiks_cube",
  "version": "1.0.0",
  "description": "A Rubik's Cube Browser Simulator",
  "main": "rubiks_cube.js",
  "scripts": {
    "build": "npm-run-all clean css:ugly js:ugly",
    "clean": "rm -rf dist/*",
    "css": "node-sass src/scss/main.scss dist/built.css",
    "css:ugly": "npm run css -- --output-style=compressed",
    "css:watch": "onchange -i 'src/scss/**/*.scss' -- npm run css",
    "js": "rollup -c",
    "js:ugly": "npm run js && uglifyjs dist/built.js -mc -o dist/built.js",
    "js:watch": "npm run js -- --watch --serve",
    "watch": "npm-run-all -p css:watch js:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slammayjammay/rubiks_cube.git"
  },
  "author": "Scott McKenzie",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/slammayjammay/rubiks_cube/issues"
  },
  "homepage": "https://github.com/slammayjammay/rubiks_cube#readme",
  "dependencies": {
    "gsap": "^1.19.0",
    "jquery": "^3.1.0",
    "three": "^0.79.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-preset-stage-2": "^6.17.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chalk": "^1.1.3",
    "node-sass": "^3.10.0",
    "npm-run-all": "^3.1.0",
    "onchange": "^3.0.2",
    "rollup": "^0.36.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.4",
    "rollup-plugin-livereload": "^0.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-serve": "^0.1.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "uglify-js": "^2.7.3"
  }
}
